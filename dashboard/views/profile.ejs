<!DOCTYPE html>
<html>
    <%- include('includes/head') %>
    <body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed sidebar-closed sidebar-fixed sidebar-collapse dark-mode">
        <div class="wrapper">
            <%- include('includes/header') %>
            <div class="content-wrapper px-4 py-2" >
                <!-- Content Header (Page header) -->
                <div class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1><%= translate("misc:profile") %></h1>
                            </div>
                        </div>
                    </div>
                </section>
                <section class="content">
                    <div class="container-fluid">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title"><%= user2.tag %></h3>
                            </div>
                            <div class="card-body">
                                <img src="<%= user2.displayAvatarURL() %>" class="rounded mx-auto d-block" style="max-width: 250px; max-height: 250px">
                                <%= userDB2.bio %>
                            </div>
                            <div class="card-footer">
                                <%= `${translate("misc:accCreated")}: ${new Date(userDB2.registeredAt).toString()}` %><br>
                                <%= `${translate("cmds:balance.titleShort")}\n${translate("cmds:balance.balNoEmojis", {
                                wallet: userDB2.wallet,
                                bank: userDB2.bank,
                                bankLimit: userDB2.bankLimit,
                                percentage: (userDB2.bankLimit - userDB2.bank) / 100,}).split("\n").join("<br>\n")}` %>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
        <%- include('includes/footer') %>
    </body>
</html>
